# Avatar Chat Server - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI Configuration (Required)
# =============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-realtime-preview
OPENAI_VOICE=alloy

# =============================================================================
# Assistant Configuration
# =============================================================================
ASSISTANT_INSTRUCTIONS=You are a helpful and friendly AI assistant. Be concise in your responses.

# =============================================================================
# Audio2Expression Model Configuration
# =============================================================================
# Path to the extracted pretrained_models folder
MODEL_PATH=./src/pretrained_models/lam_audio2exp_streaming.tar
IDENTITY_IDX=10
USE_GPU=true

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false

# =============================================================================
# Authentication Configuration
# Generate AUTH_SECRET_KEY with: openssl rand -hex 32
# =============================================================================
AUTH_ENABLED=true
AUTH_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
AUTH_TOKEN_TTL=3600
AUTH_ALLOWED_ORIGINS=https://yourwebsite.com,https://www.yourwebsite.com
AUTH_ENABLE_RATE_LIMITING=true
